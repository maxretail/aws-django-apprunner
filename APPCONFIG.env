# Application name used for AWS resources
APP_NAME=apprunner_django_app

# AWS region (optional, will use CDK_DEFAULT_REGION if not set)
AWS_REGION=us-east-1

# Django superuser credentials
# this will be used in production
DJANGO_SUPERUSER_EMAIL=devops@example.com

# this is only used in developement via docker compose.
DJANGO_SUPERUSER_PASSWORD=devops123 

# Database configuration
# Instance class: BURSTABLE3 (t3), BURSTABLE4 (t4), MEMORY_OPTIMIZED (r6)
DB_INSTANCE_CLASS=BURSTABLE3
# Instance size: MICRO, SMALL, MEDIUM, LARGE, XLARGE, 2XLARGE
DB_INSTANCE_SIZE=SMALL
# Storage size in GiB (20-65536)
DB_STORAGE_SIZE=20 